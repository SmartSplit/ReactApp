@model ReactApp.ViewModels.UserListViewModel

@{
    Layout = "_LTELayout";
    ViewBag.Title = "Users";
}

@if (ViewBag.Error != true)
{
<body>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayName("Name")</th>
                <th>@Html.DisplayName("Email")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        <div class="btn-group">
                            <a type="button" class="btn btn-success" href="@Url.Action("Details", new { id = item.Id })">Show</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
}
else
{
    <div class="alert alert-info">Sorry, can't fetch data.</div>
}

